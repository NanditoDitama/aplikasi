<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewOriginalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/original_title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewOriginalDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/original_description" />

            <TextView
                android:id="@+id/textViewOriginalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/original_amount" />

            <TextView
                android:id="@+id/textViewOriginalDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/original_date" />

            <ImageView
                android:id="@+id/imageViewOriginal"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                android:contentDescription="@string/original_image" />

            <TextView
                android:id="@+id/textViewUpdatedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/updated_title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewUpdatedDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/updated_description" />

            <TextView
                android:id="@+id/textViewUpdatedAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/updated_amount" />

            <TextView
                android:id="@+id/textViewUpdatedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/updated_date" />

            <ImageView
                android:id="@+id/imageViewUpdated"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                android:contentDescription="@string/updated_image" />

            <Button
                android:id="@+id/buttonApprove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/approve" />

            <Button
                android:id="@+id/buttonReject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reject" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>